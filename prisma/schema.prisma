// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  userID    String    @id @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  email String  @unique
  password  String

  name String?

  trips       Trip[]
}

model Trip {
  tripID      String      @unique @id
  userID      String
  tripName    String
  startDate   DateTime
  endDate     DateTime
  destination String
  description String      @default("This is a default description")

  days        Day[]

  user        User        @relation(fields: [userID], references: [userID])
  
  @@unique([userID, tripID])
}

model Day {
  dayID   String      @unique @id
  day     Int
  tripID  String
  date    DateTime

  activities Activity[]

  trip     Trip     @relation(fields: [tripID], references: [tripID])
}

model Activity {
  activityID   String      @unique @id
  tripID       String
  dayID        String
  activityName String
  location     String
  cost         String      @default("$ 9.53")
  startTime    String      @default("6 pm")
  endTime      String      @default("7 pm")
  description  String
  votes        Vote[]

  day          Day       @relation(fields: [dayID], references: [dayID])
}

model Vote {
  voteID       String      @unique @id 
  activityID   String
  userID       String
  voteType     String

  activity     Activity  @relation(fields: [activityID], references: [activityID])

  @@unique([activityID, userID])
}